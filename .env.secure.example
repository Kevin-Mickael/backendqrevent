# ============================================
# QR Event - Configuration sécurisée (.env)
# ============================================
# Copier ce fichier en .env et remplir les valeurs
# NE JAMAIS commiter le fichier .env !

# ============================================
# Sécurité JWT (OBLIGATOIRE)
# ============================================
# Générer avec: openssl rand -base64 32
JWT_SECRET=votre_secret_jwt_tres_long_et_aleatoire_32_caracteres_min
JWT_EXPIRE=1h

# ============================================
# Base de données Supabase
# ============================================
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_ANON_KEY=votre_cle_anon
SUPABASE_SERVICE_ROLE_KEY=votre_cle_service_role
SUPABASE_CONNECTION_STRING=postgresql://postgres:[PASSWORD]@db.xxx.supabase.co:5432/postgres

# ============================================
# Sécurité
# ============================================
BCRYPT_ROUNDS=12
NODE_ENV=production

# ============================================
# CORS - Origines autorisées (séparées par des virgules)
# ============================================
ALLOWED_ORIGINS=https://votredomaine.com,https://www.votredomaine.com

# ============================================
# Stockage R2 (Cloudflare)
# ============================================
R2_ENDPOINT=https://votre-compte.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=votre_access_key
R2_SECRET_ACCESS_KEY=votre_secret_key
R2_BUCKET=votre-bucket
R2_PUBLIC_URL=https://votre-url-publique.r2.dev

# ============================================
# Redis (Cache)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
